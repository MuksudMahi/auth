<%- include ../partials/header.ejs %>
    <%- include ../partials/main_nav.ejs %>
        <main class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6">
                    <h1 class="display-4">
                        <%= title %>
                    </h1>
                    <form method="POST" class="form">
                        <div class="form-group">
                            <label for="nameTextField"></label>
                            <input type="text" class="form-control" id="nameTextField" name="name"
                                placeholder="Enter contact name" required>
                        </div>
                        <div class="form-group">
                            <label for="contactTextField"></label>
                            <input type="text" class="form-control" id="contactTextField" name="contact"
                                placeholder="Enter contact number" required>
                        </div>
                        <div class="form-group">
                            <label for="emailTextField"></label>
                            <input type="email" class="form-control" id="emailTextField" name="email"
                                placeholder="Enter contact email" required>
                        </div>
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-edit"></i> Submit
                        </button>

                        <a href="/business_contact" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel
                        </a>

                    </form>
                </div>
            </div>
        </main>
        <%- include ../partials/bottom_nav.ejs %>
        <%- include ../partials/footer.ejs %>